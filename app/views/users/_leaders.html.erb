<dl>
	<% count = 1 %>
	<% leaders.each do |leader| %>
	  <dt class="span-11">		
		<div class="user-score-box <%= if(count==1) then 'notice' else 'box' end %> ">
			<div class="span-2">
				<%= image_tag leader.profile_image_url, :class => 'left' %> 
			</div>
			<div class="span-5">
				<h3 class="bottom"> <a href="http://twitter.com/<%= leader.screen_name %>"><%= leader.screen_name %></a> </h3>
				<h4 class="quiet"> <%= leader.name %> </h4>
			</div>
			<div class="span-3 last">
				<h1 class="bottom"> <%= leader.score.value %> XP</h1>
				<p class="quiet"><%= count.ordinalize %> position</p>
			</div>
			<div class="clear"/>
		</div>
	  </dt>
	  <% count+= 1 %>
	<% end %>
</dl>